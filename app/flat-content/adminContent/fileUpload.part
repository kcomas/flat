<div class="row">
    <div class="col-md-12">
        <form novalidate>
            <div class="form-group">
                Name: <input class="form-control"  type="text" ng-model="current.name" />
            </div>
            <div class="form-group">
                <label class="radio-inline">
                    Public: <input type="radio" ng-model="current.public" value="true" class="form-control" />
                </label>
                <label class="radio-inline">
                    Private: <input type="radio" ng-model="current.public" value="false" class="form-control" />
                </label>
            </div>
        </form>
    </div>
</div>
